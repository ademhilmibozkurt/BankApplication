@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model List<AccountModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mt-4s">

    <div class="col-6
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"> Kullanıcı Bilgileri </h5>
                <p class="card-text"> İsim: @ViewBag.FullName</p>

                <!-- show Home/Index.cshtml when on clicking button -->
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary"> Kullanıcı Listesine Geri Dön </a>
            </div>
        </div>
    </div>

    <div class="col-6">
        <h5> Hesap Bilgileri </h5>
        @if(Model.Count> 0)
        {
            @foreach(AccountModel account in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"> Hesap Numarası: @account.AccountNumber </h5>
                        <p class="card-text"> Bakiye Bilgisi: @account.Balance </p>
                        <a asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@account.Id" class="btn btn-primary"> Para Gönder </a>
                    </div>
                </div>
            }
            
        }
        else
        {
            <div class="alert alert-primary" role="alert">
                Kullanıcı hesabı bulunamadı..
            </div>
        }

    </div>

</div>
